        android:angle="135"
        android:centerColor="@color/greenLight"
        android:centerX="15%"
        android:endColor="@color/greenAccent"
        android:startColor="@color/greenAccent"
        android:type="linear" />
    <padding
        android:bottom="15dp"
        android:left="10dp"
        android:right="10dp"
        android:top="15dp" />

    <stroke
        android:width="1dp"
        android:color="@color/grrenBorder" />
</shape>